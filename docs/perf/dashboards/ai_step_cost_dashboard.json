{
  "title": "NPC Runtime â€” AI Step Cost",
  "uid": "npc-ai-step-cost",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "tags": ["npc", "runtime", "perf", "ai"],
  "templating": {
    "list": [
      {
        "name": "module",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_ai_step_duration_ms_bucket, module)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "area",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_ai_step_duration_ms_bucket{module=~\"$module\"}, area)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "scenario",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_ai_step_duration_ms_bucket, scenario)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "AI step duration avg/p95 (ms)",
      "targets": [
        {"expr": "sum(rate(npc_ai_step_duration_ms_sum{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])) / clamp_min(sum(rate(npc_ai_step_duration_ms_count{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])), 1)", "legendFormat": "avg"},
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(npc_ai_step_duration_ms_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p95"}
      ],
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "table",
      "title": "Top handlers by mean cost (ms)",
      "targets": [
        {"expr": "topk(10, sum by (handler) (rate(npc_ai_step_duration_ms_sum{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])) / clamp_min(sum by (handler) (rate(npc_ai_step_duration_ms_count{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])), 1))", "legendFormat": "{{handler}}"}
      ],
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9}
    },
    {
      "type": "table",
      "title": "Top handlers by p95 cost (ms)",
      "targets": [
        {"expr": "topk(10, histogram_quantile(0.95, sum by (handler, le) (rate(npc_ai_step_duration_ms_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m]))))", "legendFormat": "{{handler}}"}
      ],
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9}
    }
  ]
}
