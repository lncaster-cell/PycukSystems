{
  "title": "NPC Runtime â€” Tick Orchestration",
  "uid": "npc-tick-orchestration",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "tags": ["npc", "runtime", "perf", "tick"],
  "templating": {
    "list": [
      {
        "name": "module",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_tick_duration_ms_bucket, module)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "area",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_tick_duration_ms_bucket{module=~\"$module\"}, area)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      },
      {
        "name": "scenario",
        "type": "query",
        "datasource": {"type": "prometheus", "uid": "${DS_PROMETHEUS}"},
        "query": "label_values(npc_tick_duration_ms_bucket, scenario)",
        "refresh": 2,
        "includeAll": true,
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Area tick latency p50/p95/p99 (ms)",
      "targets": [
        {"expr": "histogram_quantile(0.50, sum by (le) (rate(npc_tick_duration_ms_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p50"},
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(npc_tick_duration_ms_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p95"},
        {"expr": "histogram_quantile(0.99, sum by (le) (rate(npc_tick_duration_ms_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p99"}
      ],
      "gridPos": {"h": 9, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Queue depth (p95/p99)",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum by (le) (rate(npc_tick_queue_depth_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p95"},
        {"expr": "histogram_quantile(0.99, sum by (le) (rate(npc_tick_queue_depth_bucket{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])))", "legendFormat": "p99"}
      ],
      "gridPos": {"h": 9, "w": 12, "x": 0, "y": 9}
    },
    {
      "type": "timeseries",
      "title": "Tick budget overrun rate (%)",
      "targets": [
        {"expr": "100 * sum(rate(npc_tick_overrun_total{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])) / clamp_min(sum(rate(npc_tick_total{module=~\"$module\",area=~\"$area\",scenario=~\"$scenario\"}[5m])), 1)", "legendFormat": "overruns"}
      ],
      "gridPos": {"h": 9, "w": 12, "x": 12, "y": 9}
    }
  ]
}
